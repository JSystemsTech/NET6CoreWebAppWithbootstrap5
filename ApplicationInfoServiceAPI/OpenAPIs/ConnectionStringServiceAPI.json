{
  "openapi": "3.0.1",
  "info": {
    "title": "ConnectionStringServiceAPI",
    "version": "v1"
  },
  "paths": {
    "/api/Login/Authenticate": {
      "post": {
        "tags": [
          "Login"
        ],
        "operationId": "Authenticate",
        "parameters": [
          {
            "name": "appId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessToken"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessToken"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessToken"
                }
              }
            }
          }
        }
      }
    },
    "/api/Service/GetConnectionString": {
      "get": {
        "tags": [
          "Service"
        ],
        "operationId": "GetConnectionString",
        "parameters": [
          {
            "name": "appId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConnectionStringResult"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConnectionStringResult"
                }
              }
            }
          },
          "422": {
            "description": "Client Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConnectionStringResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccessToken": {
        "type": "object",
        "properties": {
          "hasError": {
            "type": "boolean",
            "readOnly": true
          },
          "errorMessage": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "expiresUtc": {
            "type": "string",
            "format": "date-time"
          },
          "refreshOnUtc": {
            "type": "string",
            "format": "date-time"
          },
          "token": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ConnectionStringResult": {
        "type": "object",
        "properties": {
          "hasError": {
            "type": "boolean",
            "readOnly": true
          },
          "errorMessage": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "connectionString": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme.",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}